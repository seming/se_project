<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="@string/abc_action_bar_home_description"
    android:orientation="vertical"
    tools:context="com.example.dailyassistant.NoteManager" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
       android:orientation="horizontal" >

        <Button
            android:id="@+id/button_view_contents"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
           android:gravity="center|fill_vertical"
            android:text="상세보기" />

        <Button
            android:id="@+id/button_delete_note"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center|fill_vertical"
            android:text="삭제" />

        <Button
            android:id="@+id/button_add_note"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center|fill_vertical"
            android:text="새노트" />
    </LinearLayout>

    <ListView
        android:id="@+id/listview_view_all_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >
    </ListView>
    
</LinearLayout>
